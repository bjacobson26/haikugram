= form_for @haiku, html: {class: 'pure-form'} do |f|
  - if @haiku.errors.any?
    #error_explanation
      %h2
        = pluralize(@haiku.errors.count, "error")
        prohibited this haiku from being saved:
      %ul
        - @haiku.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title, class: 'haiku-font'
    %br/
    = f.text_field :title, class: 'haiku-font'
  .field
    = f.label :first_line, class: 'haiku-font'
    %br/
    = f.text_field :first_line, class: 'haiku-font'
  .field
    = f.label :second_line, class: 'haiku-font'
    %br/
    = f.text_field :second_line, class: 'haiku-font'
  .field
    = f.label :third_line, class: 'haiku-font'
    %br/
    = f.text_field :third_line, class: 'haiku-font'
  .field
    = f.hidden_field :user_id, value: current_user.id
  .actions
    = f.submit 'Save',  class: 'pure-button purple-background button haiku-font'
