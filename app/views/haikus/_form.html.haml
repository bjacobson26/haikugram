= form_for(@haiku) do |f|
  - if @haiku.errors.any?
    #error_explanation
      %h2
        = pluralize(@haiku.errors.count, "error")
        prohibited this haiku from being saved:
      %ul
        - @haiku.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :first_line
    %br/
    = f.text_field :first_line
  .field
    = f.label :second_line
    %br/
    = f.text_field :second_line
  .field
    = f.label :third_line
    %br/
    = f.text_field :third_line
  .field
    = f.hidden_field :user_id, value: current_user.id
  .actions
    = f.submit
